<configuration>

    <!-- Console appender for INFO logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%msg</pattern>
        </encoder>
    </appender>

    <!-- File appender for ERROR logs -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>Bencic-5/logs/pogreske.log</file>
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level> <!-- Specify the minimum level to be logged -->
        </filter>
    </appender>

    <!-- Logger configuration for console logging -->
    <logger name="Bencic-5.production.main.MainConsole" level="INFO">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root logger configuration -->
    <root level="ERROR">
        <appender-ref ref="FILE"/>
    </root>

</configuration>